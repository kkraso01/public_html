  <script>
    /* Boot animation logic */
    const boot = document.getElementById('boot-screen');
    const log = document.getElementById('boot-log');

    const lines = [
      "[INIT] Loading research node...",
      "[OK]  Vector DB interface online",
      "[OK]  LLM-MS orchestrator operational",
      "[OK]  Neural field renderer active",
      "[OK]  Transformer visualizer attached",
      "[OK]  Telemetry HUD streaming",
      "[READY] Welcome, Konstantin."
    ];

    let i = 0;
    function nextLine() {
      if (i < lines.length) {
        log.textContent += lines[i] + "\n";
        i++;
        setTimeout(nextLine, 450);
      } else {
        setTimeout(() => {
          boot.classList.add("hidden");
        }, 600);
      }
    }
    nextLine();
  </script>

