  <style>
    /* Background canvas */
    #nn-bg {
      position: fixed;
      inset: 0;
      width: 100%;
      height: 100%;
      z-index: -2;
      background: radial-gradient(circle at top, #1f2937 0, #020617 55%, #020617 100%);
      pointer-events: none;
    }

    /* Boot screen */
    #boot-screen {
      position: fixed;
      inset: 0;
      background: radial-gradient(circle at top, #020617 0, #020617 60%, #000 100%);
      color: #e5e7eb;
      z-index: 50;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    }
    #boot-screen.hidden {
      pointer-events: none;
      opacity: 0;
      transition: opacity 700ms ease-out;
    }

    /* Small scanline effect */
    #boot-overlay {
      position: absolute;
      inset: 0;
      pointer-events: none;
      background-image: linear-gradient(
        rgba(15,23,42,0.18) 1px,
        rgba(15,23,42,0) 1px
      );
      background-size: 100% 3px;
      mix-blend-mode: soft-light;
    }

    /* Side nav glass */
    .nav-glass {
      backdrop-filter: blur(14px);
      background: linear-gradient(to bottom, rgba(15,23,42,0.92), rgba(15,23,42,0.85));
      border-right: 1px solid rgba(55,65,81,0.8);
    }

    /* Scrollbar subtle */
    ::-webkit-scrollbar {
      width: 8px;
    }
    ::-webkit-scrollbar-track {
      background: transparent;
    }
    ::-webkit-scrollbar-thumb {
      background: rgba(31,41,55,0.9);
      border-radius: 9999px;
    }

    html {
      scroll-behavior: smooth;
    }
  </style>
</head>
